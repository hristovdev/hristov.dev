{
  "compilerOptions": {
    "target": "es5",
    "module": "ES6",
    "strict": false,
    "jsx": "react-jsx",
    "lib": ["ES2015", "dom"],
    "esModuleInterop": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": "./src/",
    "skipLibCheck": true,
    "removeComments": true,
    "checkJs": false,
    "importHelpers": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "types": []
  },
  "include": ["./src/"],
  "exclude": ["node_modules"]
}
